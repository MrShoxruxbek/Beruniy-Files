<resources>

    <style name="MyGow" />

    <style name="MyGow.Default">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyGow.Default.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/toolbar_icon_color_silver_dark</item>
        <item name="buttonStyle">@style/MyGow.Button</item>
        <item name="searchViewStyle">@style/MyGow.SearchViewStyle</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/action_mode_color</item>
    </style>

    <style name="MyGow.NoActionBar" parent="MyGow.Default.NoActionBar" />

    <style name="MyGow.ToolbarTheme">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:actionBarItemBackground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="MyGow.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>


    <style name="MyGow.EdgeOverlayTheme" />

    <style name="MyGow.ScrollViewEdgeOverlay" />

    <style name="MyGow.Button" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@drawable/mygowlib_button_background</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyGow.YellowButton" parent="MyGow.Button">
        <item name="android:background">@drawable/mygowlib_yellow_button_background</item>
    </style>

    <style name="MyGow.RedButton" parent="MyGow.Button">
        <item name="android:background">@drawable/mygowlib_red_button_background</item>
    </style>

    <style name="MyGow.BlueButton" parent="MyGow.Button">
        <item name="android:background">@drawable/mygowlib_blue_button_background</item>
    </style>

    <style name="MyGow.GreenButton" parent="MyGow.Button">
        <item name="android:background">@drawable/mygowlib_green_button_background</item>
    </style>

    <style name="MyGow.FloatActionMenuButton">
        <item name="android:background">@drawable/mygowlib_fab_menu_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyGow.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:background">@drawable/mygowlib_edittext_background</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyGow.SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="closeIcon">@drawable/ic_mygowlib_clear_white_24dp</item>
        <item name="searchIcon">@drawable/ic_mygowlib_search_white_24dp</item>
        <item name="searchHintIcon">@drawable/ic_mygowlib_search_white_24dp</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--title and message color-->
        <item name="android:textColorPrimary">@color/text_color</item>
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/mygowlib_background_dialog</item>
    </style>

    <style name="DefaultEditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">8dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DefaultAccentButton" parent="MyGow.Button">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_accent_background</item>
    </style>

    <style name="MySpinnerLight" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="MyGow.Spinner" parent="Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:popupBackground">@color/colorPrimary</item>
        <item name="android:spinnerItemStyle">@color/dark_silver</item>
        <item name="android:itemTextAppearance">@color/dark_silver</item>
    </style>

    <style name="MyGow.CompoundButton" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
